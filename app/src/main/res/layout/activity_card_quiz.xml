<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz.activities.CardQuizActivityTemplate">

    <include
        layout="@layout/quiz_activity_common_layout"
        android:id="@+id/quiz_activity_common"
        app:layout_constraintBottom_toTopOf="@+id/answer_options_buttons_table"/>
    
    <include
        layout="@layout/answer_options_buttons_table_layout"
        android:id="@+id/answer_options_buttons_table"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@+id/quiz_activity_common"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>