<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stresses.StressesActivity">

    <include layout="@layout/toolbar_basic_layout"
        android:id="@+id/toolbar_activity_exam"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0"  />

    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ScoreText"

        app:layout_constraintTop_toBottomOf="@id/toolbar_activity_exam"
        app:layout_constraintBottom_toTopOf="@+id/quiz_word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        tools:text="Счёт: 999"
        tools:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/quiz_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance"

        app:layout_constraintBottom_toTopOf="@id/answer_options_buttons_table"
        app:layout_constraintTop_toBottomOf="@id/score_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        tools:text="вероисповедание"
        tools:textColor="@android:color/black"/>

    <include
        layout="@layout/answer_options_buttons_table_layout"
        android:id="@+id/answer_options_buttons_table"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@+id/quiz_word"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>