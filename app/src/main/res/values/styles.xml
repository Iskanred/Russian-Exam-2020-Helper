<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

    </style>


    <!-- Text Appearance -->
    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textSize">54sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/oswald</item>
    </style>

    <style name="CountDownText" parent="TextAppearance">
        <item name="android:textSize">108sp</item>
    </style>

    <style name="ScoreText" parent="TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/oswald</item>
    </style>
    <!--_________________-->


    <!-- Buttons -->
    <style name="ButtonChoosingExam" parent="TextAppearance">
        <item name="android:background">@drawable/button_default_state</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AnswerOptionButton" parent="TextAppearance">
        <item name="android:background">@drawable/button_default_state</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">3dp</item>
    </style>
    <!--_________-->

</resources>
