<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">

    </style>

    <!-- Text Appearance -->
    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textSize">54sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/oswald</item>
    </style>

    <style name="CountDownText" parent="TextAppearance">
        <item name="android:textSize">108sp</item>
    </style>

    <style name="ScoreText" parent="TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:text">@string/score_header_text</item>
    </style>
    <!--_________________-->

    <!-- Buttons -->
    <style name="ButtonChoosing" parent="TextAppearance">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AnswerOptionButton" parent="TextAppearance">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">3dp</item>
    </style>
    <!--_________-->

</resources>
